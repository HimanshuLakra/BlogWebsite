<!-- new_record check record for object exist or not  -->
<% if !comment.new_record? %>
	<div id = "comment_<%= comment.id %>" class="panel panel-default" >
	<div id = "parent_div" style="overflow: hidden;" class="panel-body">
		<div style="float: left;">
			<% if comment.user.picture.present? %>
				<div>
					<%= image_tag comment.user.picture.image.url, height: 50,width: 50 %>
				</div>
			<% end %>
		</div>
		<div id = "content_div" style="float:left;margin-left: 30px;">
			<div style="overflow: hidden;">
				<div style="float: left;">
				  <strong><%= "#{comment.user.email.split("@")[0].capitalize }" %></strong>
				</div>
				<div style="float: left; margin-left: 20px;"> 
					<% if user_signed_in? and current_user.id == comment.user_id %>
				  		<%= form_for([comment.post, comment], html: {method: :delete},remote: true) do |f| %>
				 			<button type="submit" class="btn btn-raised btn-info">Destroy</button>
				 		<% end %>
				  	<% end %>
				</div>
			</div>
			<div>
				<%= comment.body %>
			</div>
			<div id="seperator" class="divider"></div>
			<div class= "text-center" style="overflow: hidden;">
				<div style="float: left; font-size: 12px;"><%=  DateTime.parse(comment.created_at.to_s).strftime("%m/%d/%Y") %> </div>
			</div>
		</div>
	</div>
		<br>
	</div>
<% end %>

