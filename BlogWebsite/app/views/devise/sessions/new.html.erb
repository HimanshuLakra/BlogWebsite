
<%= content_for :head do%>
  <link rel="stylesheet" href="https://cdn.rawgit.com/FezVrasta/bootstrap-material-design/dist/dist/bootstrap-material-design.min.css">
<% end %>
<h5>Log in</h5>

<div class="card" style="margin-top: 20px;">
<div class ="card-block">
<%= form_for(resource, as: resource_name, url: session_path(resource_name),validate: true) do |f| %>
  <div class="form-group">
   <%= f.label :email,class: "bmd-label-floating" %><br />
   <%= f.email_field :email,class: "form-control", autofocus: true ,validate: false%>
  </div>

  <div class="form-group">
    <%= f.label :password ,class: "bmd-label-floating"%><br />
    <%= f.password_field :password, class: "form-control",autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" ,class: "btn btn-raised btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>